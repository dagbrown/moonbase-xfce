depends autoconf-archive
depends gtk+-3
depends libxml2
depends vala
depends intltool
depends gobject-introspection

optional_depends vala \
                 "--enable-vala=yes" \
                 "--enable-vala=no" \
                 "for vala support"

optional_depends valgrind \
                 "--enable-valgrind" \
                 "--disable-valgrind" \
                 "for valgrind support"

optional_depends gtk-doc \
                 "--enable-gtk-doc=yes" \
                 "--enable-gtk-doc=no" \
                 "for building documentation" \
                 "n"
